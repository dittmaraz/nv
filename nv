if [ ! -d "$PROJECT_PATH" ]; then
    mkdir "$PROJECT_PATH"
    echo "Folder $PROJECT_PATH created."
fi

cd "$PROJECT_PATH"

git clone "$GITHUB_URL" $PWD

echo "Copied $GITHUB_URL to $PROJECT_PATH"

npm i

code .
