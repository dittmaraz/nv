GREEN='\033[1;32m'
GREY='\033[0;36m'
NC='\033[0m'


echo -e "${GREEN}ðŸ˜ƒ nv by ${GREY}dittmaraz${NC}"
if [ -z "$*" ]; then 
	echo "Missing argument: new project name"
	exit
fi

PROJECTS_PATH="$HOME"
GITHUB_URL="git@github.com:dittmaraz/vue-dittmaraz-template.git"

PROJECT_NAME="$1"
PROJECT_PATH="$PROJECTS_PATH/$PROJECT_NAME"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     